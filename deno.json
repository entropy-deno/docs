{
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "esnext",
      "deno.ns"
    ],
    "strict": true
  },
  "fmt": {
    "include": [
      "src/"
    ],
    "indentWidth": 2,
    "lineWidth": 85,
    "semiColons": true,
    "singleQuote": true
  },
  "imports": {
    "@std/": "https://deno.land/std@0.191.0/"
  },
  "tasks": {
    "start": "deno task start:dev",
    "start:dev": "deno run -A --watch ./src/main.ts --dev --open",
    "start:prod": "deno run -A ./src/main.ts",
    "test": "deno test -A --no-check --parallel --watch",
    "test:cov": "deno test -A --coverage=coverage"
  }
}
